<Window x:Class="WpfApp9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp9"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Name="txtEntry"  Height="40" FontSize="30" />
        <Button Name="btnAdd" Width="80" Height="40" Grid.Column="1" 
                Content="+Add" FontSize="20" Click="btnAdd_Click" HorizontalAlignment="Left"/>
        <Button Name="btnDelete" Width="80" Height="40" Grid.Column="1" 
        Content="-Delete" FontSize="20" Click="btnDelete_Click" HorizontalAlignment="Left" 
                Margin="90,0,0,0"/>
        <Button Name="btnClear" Width="80" Height="40" Grid.Column="1" 
Content="-Clear" FontSize="20" Click="btnClear_Click" HorizontalAlignment="Left" 
        Margin="180,0,0,0"/>
        
        <ListView Name="listView" Grid.Row="1" Grid.Column="0" />

    </Grid>
</Window>
